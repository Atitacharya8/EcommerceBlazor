@page "/learnBlazor/parentcomponent"

<h3>Parent Child Relation</h3>

<_ChildComponent OnButtonClick="ShowMessage" Title="this title is passed from Parent Component and displayed.">
    <ChildContent>my name is render fragment from child component.</ChildContent>
    <DangerChildContent>Danger content from render fragment! </DangerChildContent>

</_ChildComponent>
<p>@messageText</p>

<_AnotherChildComponent Placeholder="Placeholder from Parent" MaxLength="5"></_AnotherChildComponent>

@* <_ChildComponent OnButtonClick="ShowMessage" Title="this is second child component.">
</_ChildComponent> *@

@code {
    public string messageText = "";

    private void ShowMessage()
    {
        messageText = "Button clicked from Child component";
    }

     [Parameter]
    public Dictionary<string, object> InputAttributes { get; set; } = new Dictionary<string, object>()
    {
        {"required", "required" },
        {"placeholder", "Enter Name from Parent"},
        {"maxlength", 5}
    };

}
